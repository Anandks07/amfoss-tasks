#include <iostream>
#include <cstdio>
#include <cstring>
using namespace std;

int main() {
	int x,i,n;
	char a[4];
	cin>>n;
	x=0;
	for(i=0;i++;i<n)
	{
	    scanf(a);
	    if(strcmp(a,"++X")==0)
	    {
	        ++x;
	    }
	    if(strcmp(a,"X++")==0)
	    {
	        x++;
	    }
	    if(strcmp(a,"--X")==0)
	    {
	      --x;  
	    }
	    if(strcmp(a,"X--")==0)
	    {
	        x--;
	    }
	}
	cout<<x;
	return 0;
}

