#include <iostream>
#include<cstring>
using namespace std;

int main() {
    char a[100];
    int i,j,n,k;
    cin>>n;
    for(j=0;j<n;j++){
    cin>>a;
    i=strlen(a);
    if(i<10)
    {
        cout<<i<<"\n";
    }
    else
    {
        k=i-2;
        cout<<a[0]<<k<<a[n-1]<<"\n";
    }
    }
    
	return 0;
}
